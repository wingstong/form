<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C1B5D5"
    android:id="@+id/constraint">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="220dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:text="Fill out the form with your data!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="293dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFullName" />

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="293dp"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="293dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:text="Phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAge" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="293dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:text="E-mail"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone"
        app:layout_constraintVertical_bias="0.017" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="220dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Choose your favorite pets!"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBoxFish"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_marginEnd="100dp"
        android:text="Fish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxBird" />

    <CheckBox
        android:id="@+id/checkBoxBird"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Bird"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toEndOf="@+id/checkBoxCat"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/checkBoxDog"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:text="Dog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/checkBoxCat"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:text="Cat"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxFish"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDog" />

    <RadioGroup
        android:id="@+id/radioGroupWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDog">

    </RadioGroup>

    <RadioButton
        android:id="@+id/radioButtonSalary"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginEnd="72dp"
        android:text="Salary"
        app:layout_constraintBottom_toTopOf="@+id/editTextSalary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView666"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxFish"
        app:layout_constraintVertical_bias="0.848" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send form"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSalary"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/textView666"
        android:layout_width="220dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Choose your option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCat" />

    <EditText
        android:id="@+id/editTextSalary"
        android:layout_width="293dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:inputType="numberDecimal"
        android:text="Desired salary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView666" />

    <RadioButton
        android:id="@+id/radioButtonVolunteer"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"

        android:text="Volunteer"
        app:layout_constraintEnd_toStartOf="@+id/radioButtonSalary"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView666" />

</androidx.constraintlayout.widget.ConstraintLayout>